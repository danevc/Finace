<Window x:Class="Finace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finace"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <DockPanel>
        <StackPanel Background="LightGray">
            <Button BorderBrush="Azure" Background="Azure" Padding="5" Margin="0,0,0,2" Width="50" Click="HomeClick">
                <Image Source="Assets/icons/home.png"></Image>
            </Button>
            <Button BorderBrush="Azure" Background="Azure" Padding="5" Margin="0,0,0,2" Width="50" Click="DashboardClick">
                <Image Source="Assets/icons/dashboard.png"></Image>
            </Button>
            <Button BorderBrush="Azure" Background="Azure" Padding="5" Margin="0,0,0,2" Width="50" Click="SettingsClick">
                <Image Source="Assets/icons/settings.png"></Image>
            </Button>
        </StackPanel>
        <Frame Name="MainFrame" Background="Gray" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
