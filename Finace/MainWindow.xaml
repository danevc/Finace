<Window x:Class="Finace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finace"
        xmlns:controls="clr-namespace:Finace.Controls"
        mc:Ignorable="d"
        Title="Finace"
        Height="700"
        Width="1000"
        Background="#46433D"
        AllowsTransparency="true"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           MinHeight="20" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2">
            <ui:TitleBar Title="Finace"
                         Height="30" />
        </Border>

        <Border Grid.Row="1"
                Grid.Column="0"
                Background="LightGreen">
            <StackPanel Orientation="Vertical"
                        Background="#37342D">
                <controls:MenuButton x:Name="budgetPageButton"
                                     Icon="Assets/icons/BudgetButtonIcon.png"
                                     Click="BudgetPageClick" />
                <controls:MenuButton x:Name="settingsButton"
                                     Icon="Assets/icons/settings.png"
                                     Click="SettingsClick" />
                <controls:MenuButton x:Name="dashboardButton"
                                     Icon="Assets/icons/dashboard.png"
                                     Click="DashboardClick" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Grid.Column="1"
                Background="LightCoral">
            <Frame Name="MainFrame"
                   Background="#272520"
                   NavigationUIVisibility="Hidden" />
        </Border>
    </Grid>
</Window>
