<Page x:Class="Finace.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finace.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="{StaticResource TaupeGrayDarkBrush}">
        <TabControl >
            <TabItem Header="Расход">
                    <Button Content="Кнопка"
                        Background="{StaticResource XanthousBrush}"
                        Foreground="White" Height="30"/>
            </TabItem>
            <TabItem Header="Доход">Вторая вкладка</TabItem>
            <TabItem Header="Перевод">Вторая вкладка</TabItem>
        </TabControl>
    </Grid>
</Page>
