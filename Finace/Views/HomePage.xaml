<Page x:Class="Finace.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finace.Views"
      xmlns:controls="clr-namespace:Finace.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0">
                    <controls:TabButton 
                        x:Name="costButton"
                        Click="CostClick"
                        Text="РАСХОД"
                        FontSize="16"
                        FontFamily="Roboto Mono"
                        FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="1">
                    <controls:TabButton 
                        x:Name="incomeButton"
                        Click="IncomeClick"
                        Text="ДОХОД"
                        FontSize="16"
                        FontFamily="Roboto Mono"
                        FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="2">
                    <controls:TabButton 
                        x:Name="transferButton"
                        Click="TransferClick"
                        Text="ПЕРЕВОД"
                        FontSize="16"
                        FontFamily="Roboto Mono"
                        FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Background="LightCoral">
            <Grid Background="{StaticResource BlackOliveBrush}">
                <Frame Name="MainFrame" 
                   Background="{StaticResource BlackOliveLightBrush}" 
                   NavigationUIVisibility="Hidden"/>
            </Grid>
        </Border>
        <Border Grid.Row="2" Grid.Column="0" Background="LightCoral">
            <Grid Background="{StaticResource BlackOliveLightBrush}">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Таблица с записями</TextBlock>
            </Grid>
        </Border>

    </Grid>
</Page>
