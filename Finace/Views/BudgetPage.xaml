<Page x:Class="Finace.Views.BudgetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      Title="BudgetPage"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid Margin="10,0,10,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="15">
                <ComboBox Margin="0,0,30,0"
                          Width="140"
                          ItemsSource="{Binding Years}"
                          SelectedItem="{Binding SelectedYear}"
                          SelectionChanged="YearMonth_SelectionChanged"/>
                <ComboBox Width="140"
                          ItemsSource="{Binding Months}"
                          SelectedItem="{Binding SelectedMonth}"
                          SelectionChanged="YearMonth_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource MonthToIntConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <CheckBox x:Name="includeTags"
                          IsThreeState="False"
                          IsChecked="{Binding IncludeTagsCheckBox}"
                          Height="25"
                          Content="Теги"
                          Checked="includeTags_Checked"
                          Unchecked="includeTags_Unchecked"
                          Margin="30,0,0,0"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="#272520">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Обязательные траты"
                           Style="{StaticResource CustomTextStyle}"
                           FontSize="16"
                           Margin="0,2,0,2" />
                <Border Grid.Row="1"
                        Height="19"
                        Background="{StaticResource BlackOliveLightBrush}"
                        CornerRadius="8"
                        x:Name="ProgressBarContainer_Necessarily"
                        HorizontalAlignment="Center"
                        Width="220">
                    <Grid>
                        <Border CornerRadius="8"
                                HorizontalAlignment="Left">
                            <Border.Background>
                                <Binding Path="NecessarilyPercentage"
                                         Converter="{StaticResource PercentageToColorConverter}" />
                            </Border.Background>
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                    <Binding Path="NecessarilyPercentage" />
                                    <Binding ElementName="ProgressBarContainer_Necessarily"
                                             Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <TextBlock Text="{Binding NecessarilyProgressBarText}"
                                   Style="{StaticResource CustomTextStyle}" />
                    </Grid>
                </Border>
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding NecessarilyList}"
                         Style="{StaticResource ExpenseListBoxStyle}" />
            </Grid>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="#272520">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Необязательные траты"
                           Style="{StaticResource CustomTextStyle}"
                           FontSize="16"
                           Margin="0,2,0,2" />
                <Border Grid.Row="1"
                        Height="19"
                        Background="{StaticResource BlackOliveLightBrush}"
                        CornerRadius="8"
                        x:Name="ProgressBarContainer_NotNecessarily"
                        HorizontalAlignment="Center"
                        Width="220">
                    <Grid>
                        <Border CornerRadius="8"
                                HorizontalAlignment="Left">
                            <Border.Background>
                                <Binding Path="NotNecessarilyPercentage"
                                         Converter="{StaticResource PercentageToColorConverter}" />
                            </Border.Background>
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                    <Binding Path="NotNecessarilyPercentage" />
                                    <Binding ElementName="ProgressBarContainer_NotNecessarily"
                                             Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <TextBlock Text="{Binding NotNecessarilyProgressBarText}"
                                   Style="{StaticResource CustomTextStyle}" />
                    </Grid>
                </Border>
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding NotNecessarilyList}"
                         Style="{StaticResource ExpenseListBoxStyle}" />
            </Grid>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="2"
                Background="#272520">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Все траты"
                           Style="{StaticResource CustomTextStyle}"
                           FontSize="16"
                           Margin="0,2,0,2" />
                <Border Grid.Row="1"
                        Height="19"
                        Background="{StaticResource BlackOliveLightBrush}"
                        CornerRadius="8"
                        x:Name="ProgressBarContainer_TotalCostToTotalIncome"
                        HorizontalAlignment="Center"
                        Width="220">
                    <Grid>
                        <Border CornerRadius="8"
                                HorizontalAlignment="Left">
                            <Border.Background>
                                <Binding Path="TotalCostToTotalIncomePercentage"
                                         Converter="{StaticResource PercentageToColorConverter}" />
                            </Border.Background>
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                    <Binding Path="TotalCostToTotalIncomePercentage" />
                                    <Binding ElementName="ProgressBarContainer_TotalCostToTotalIncome"
                                             Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <TextBlock Text="{Binding TotalCostToTotalIncomeProgressBarText}"
                                   Style="{StaticResource CustomTextStyle}" />
                    </Grid>
                </Border>
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding TotalCostList}"
                         Style="{StaticResource ExpenseListBoxStyle}" />
            </Grid>
        </Border>
    </Grid>
</Page>
