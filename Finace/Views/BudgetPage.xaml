<Page x:Class="Finace.Views.BudgetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      Title="BudgetPage"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="500" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="15">
                <ComboBox Margin="0,0,30,0"
                          Width="120"
                          ItemsSource="{Binding Years}"
                          SelectedItem="{Binding SelectedYear}" />
                <ComboBox Width="120"
                          ItemsSource="{Binding Months}"
                          SelectedItem="{Binding SelectedMonth}" />
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="#272520">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Обязательные траты"
                           Style="{StaticResource CustomTextStyle}"
                           FontSize="16"
                           Margin="0,2,0,2" />
                <Border Grid.Row="1"
                        Height="19"
                        Background="{StaticResource BlackOliveLightBrush}"
                        CornerRadius="8"
                        x:Name="ProgressBarContainer_NotNecessarily"
                        HorizontalAlignment="Center"
                        Width="220">
                    <Grid>
                        <Border CornerRadius="8"
                                HorizontalAlignment="Left">
                            <Border.Background>
                                <Binding Path="Percentage"
                                         Converter="{StaticResource PercentageToColorConverter}" />
                            </Border.Background>
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                    <Binding Path="Percentage" />
                                    <Binding ElementName="ProgressBarContainer_NotNecessarily"
                                             Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <TextBlock Text="15 000 / 30 000 (50%)"
                                   Style="{StaticResource CustomTextStyle}" />
                    </Grid>
                </Border>
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding NotNecessarilyList}"
                         Style="{StaticResource ExpenseListBoxStyle}" />
            </Grid>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="#272520">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Обязательные траты"
                           Style="{StaticResource CustomTextStyle}"
                           FontSize="16"
                           Margin="0,2,0,2" />
                <Border Grid.Row="1"
                        Height="19"
                        Background="{StaticResource BlackOliveLightBrush}"
                        CornerRadius="8"
                        x:Name="ProgressBarContainer_Necessarily"
                        HorizontalAlignment="Center"
                        Width="220">
                    <Grid>
                        <Border CornerRadius="8"
                                HorizontalAlignment="Left">
                            <Border.Background>
                                <Binding Path="Percentage"
                                         Converter="{StaticResource PercentageToColorConverter}" />
                            </Border.Background>
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                    <Binding Path="Percentage" />
                                    <Binding ElementName="ProgressBarContainer_Necessarily"
                                             Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <TextBlock Text="15 000 / 30 000 (50%)"
                                   Style="{StaticResource CustomTextStyle}" />
                    </Grid>
                </Border>
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding NecessarilyList}"
                         Style="{StaticResource ExpenseListBoxStyle}" />
            </Grid>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="2"
                Background="#272520">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Обязательные траты"
                           Style="{StaticResource CustomTextStyle}"
                           FontSize="16"
                           Margin="0,2,0,2" />
                <Border Grid.Row="1"
                        Height="19"
                        Background="{StaticResource BlackOliveLightBrush}"
                        CornerRadius="8"
                        x:Name="ProgressBarContainer_Total"
                        HorizontalAlignment="Center"
                        Width="220">
                    <Grid>
                        <Border CornerRadius="8"
                                HorizontalAlignment="Left">
                            <Border.Background>
                                <Binding Path="Percentage"
                                         Converter="{StaticResource PercentageToColorConverter}" />
                            </Border.Background>
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                    <Binding Path="Percentage" />
                                    <Binding ElementName="ProgressBarContainer_Total"
                                             Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <TextBlock Text="15 000 / 30 000 (50%)"
                                   Style="{StaticResource CustomTextStyle}" />
                    </Grid>
                </Border>
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding NecessarilyList}"
                         Style="{StaticResource ExpenseListBoxStyle}" />
            </Grid>
        </Border>
    </Grid>
</Page>
