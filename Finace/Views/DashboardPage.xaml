<Page x:Class="Finace.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Finace.Views"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="DashboardPage"
      xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Grid Margin="10,0,10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Margin="15"
                   Style="{StaticResource CustomTextStyle}"
                   HorizontalAlignment="Left"
                   FontSize="18">СТАТИСТИКА</TextBlock>
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10">

                <StackPanel x:Name="YearMonthPick"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <ComboBox Margin="30,0,30,0"
                              Width="140"
                              ItemsSource="{Binding Years}"
                              SelectedItem="{Binding SelectedYear}"
                              SelectionChanged="YearMonth_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource YearToDisplayConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox Width="140"
                              ItemsSource="{Binding Months}"
                              SelectedItem="{Binding SelectedMonth}"
                              SelectionChanged="YearMonth_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource MonthToIntConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel x:Name="DateTimePick"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <DatePicker x:Name="DateTimePick_From"
                                SelectedDate="{Binding DateFrom}"
                                IsTodayHighlighted="True"
                                Width="140"
                                Margin="30,0,30,0"
                                SelectedDateChanged="DateTimePick_To_SelectedDateChanged" />
                    <DatePicker x:Name="DateTimePick_To"
                                SelectedDate="{Binding DateTo}"
                                IsTodayHighlighted="True"
                                Width="140"
                                SelectedDateChanged="DateTimePick_To_SelectedDateChanged" />
                </StackPanel>

                <CheckBox x:Name="AnyDateCheckBox"
                          Height="25"
                          IsThreeState="False"
                          IsChecked="{Binding AnyDateCheckBox}"
                          Content="Произвольная дата"
                          Checked="AnyDate_Checked"
                          Unchecked="AnyDate_Unchecked"
                          Margin="10,0,0,0"></CheckBox>
            </StackPanel>
        </Border>
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Style="{StaticResource CustomTextStyle}"
                   FontSize="16"
                   Margin="10,0,20,10">БАЛАНС ЗА ПЕРИОД</TextBlock>
        <Border Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Margin="10,0,10,10">
            <lvc:CartesianChart Series="{Binding Series_Balance}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}" />
        </Border>
        <Border  Grid.Row="3"
                 Grid.Column="0"
                 Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">
                <TextBlock Style="{StaticResource CustomTextStyle}"
                           FontSize="16"
                           Margin="0,10,0,10">КАТЕГОРИИ</TextBlock>
                <CheckBox x:Name="includeTags_TopCategories"
                          IsThreeState="False"
                          IsChecked="{Binding IncludeTagsCheckBox}"
                          Height="25"
                          Content="Теги"
                          Checked="includeTags_TopCategories_Checked"
                          Unchecked="includeTags_TopCategories_Unchecked" />
            </StackPanel>
        </Border>
        <Border  Grid.Row="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0">

                <TextBlock Style="{StaticResource CustomTextStyle}"
                           FontSize="14">Среднее для</TextBlock>
                <TextBox FontSize="14"
                         Width="55"
                         Height="35"
                         Text="{Binding DaysOrMonthsForAverage, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="TextBox_DataContextChanged"
                         Margin="7,0,7,0" />
                <ComboBox FontSize="12"
                          Width="90"
                          SelectedItem="{Binding UnitAverage, Mode=TwoWay}"
                          SelectionChanged="Unit_Average_SelectionChanged">
                    <sys:String>день</sys:String>
                    <sys:String>месяц</sys:String>
                </ComboBox>
            </StackPanel>
        </Border>

        <ListBox Grid.Row="5"
                 Grid.Column="0"
                 ItemsSource="{Binding TotalCostList}"
                 Style="{StaticResource ExpenseListBoxStyle}" />
        <ListBox Grid.Row="5"
                 Grid.Column="1"
                 ItemsSource="{Binding TotalIncomeList}"
                 Style="{StaticResource ExpenseListBoxStyle}" />
        <ListBox Grid.Row="5"
                 Grid.Column="2"
                 ItemsSource="{Binding AverageCostList}"
                 Style="{StaticResource ExpenseListBoxStyle}" />
        <ListBox Grid.Row="5"
                 Grid.Column="3"
                 ItemsSource="{Binding AverageIncomeList}"
                 Style="{StaticResource ExpenseListBoxStyle}" />
        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Style="{StaticResource CustomTextStyle}"
                   FontSize="13"
                   Margin="0,0,0,-6">Расход</TextBlock>
        <TextBlock Grid.Row="4"
                   Grid.Column="1"
                   Style="{StaticResource CustomTextStyle}"
                   FontSize="13"
                   Margin="0,0,0,-6">Доход</TextBlock>
        <TextBlock Grid.Row="4"
                   Grid.Column="2"
                   Style="{StaticResource CustomTextStyle}"
                   FontSize="13"
                   Margin="0,0,0,-6">Средний расход</TextBlock>
        <TextBlock Grid.Row="4"
                   Grid.Column="3"
                   Style="{StaticResource CustomTextStyle}"
                   FontSize="13"
                   Margin="0,0,0,-6">Средний доход</TextBlock>
    </Grid>
</Page>
