<UserControl x:Class="Finace.Controls.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root" MinHeight="55" MinWidth="55">
    <UserControl.Resources>
        <Style x:Key="MenuButtonInnerStyle" TargetType="Button">
            <Setter Property="Background" Value="#37342D" />
            <Setter Property="BorderBrush" Value="#37342D" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive, ElementName=root}" Value="True">
                    <Setter Property="Background" Value="#2C2A24" />
                    <Setter Property="BorderBrush" Value="#2C2A24" />
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Button x:Name="InnerButton"
            Style="{StaticResource MenuButtonInnerStyle}"
            Margin="0,0,0,2"
            Click="Button_Click">
        <Image Source="{Binding Icon, ElementName=root}"
               Stretch="Uniform"
               Width="34"
               Height="34"/>
    </Button>
</UserControl>