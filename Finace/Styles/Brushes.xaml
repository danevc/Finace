<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Кисти на основе цветов -->
    <SolidColorBrush x:Key="BlackOliveBrush" Color="{StaticResource BlackOlive}" />
    <SolidColorBrush x:Key="XanthousBrush" Color="{StaticResource Xanthous}" />
    <SolidColorBrush x:Key="EggshellBrush" Color="{StaticResource Eggshell}" />
    <SolidColorBrush x:Key="TaupeGrayBrush" Color="{StaticResource TaupeGray}" />
    <SolidColorBrush x:Key="DimGrayBrush" Color="{StaticResource DimGray}" />

    <SolidColorBrush x:Key="BlackOliveDarkBrush" Color="{StaticResource BlackOliveDark}" />
    <SolidColorBrush x:Key="XanthousDarkBrush" Color="{StaticResource XanthousDark}" />
    <SolidColorBrush x:Key="EggshellDarkBrush" Color="{StaticResource EggshellDark}" />
    <SolidColorBrush x:Key="TaupeGrayDarkBrush" Color="{StaticResource TaupeGrayDark}" />
    <SolidColorBrush x:Key="DimGrayDarkBrush" Color="{StaticResource DimGrayDark}" />

    <SolidColorBrush x:Key="BlackOliveLightBrush" Color="{StaticResource BlackOliveLight}" />
    <SolidColorBrush x:Key="XanthousLightBrush" Color="{StaticResource XanthousLight}" />
    <SolidColorBrush x:Key="EggshellLightBrush" Color="{StaticResource EggshellLight}" />
    <SolidColorBrush x:Key="TaupeGrayLightBrush" Color="{StaticResource TaupeGrayLight}" />
    <SolidColorBrush x:Key="DimGrayLightBrush" Color="{StaticResource DimGrayLight}" />

</ResourceDictionary>