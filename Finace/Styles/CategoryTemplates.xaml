<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Finace.ViewModels"
                    xmlns:converters="clr-namespace:Finace.Converters">

    <BooleanToVisibilityConverter x:Key="BoolToVis" />
    <converters:BoolToAngleConverter x:Key="BoolToAngleConverter" />

    <DataTemplate x:Key="ParentTemplate"
                  DataType="{x:Type viewModels:ParentCategoryViewModel}">
        <Border 
                Margin="3"
                CornerRadius="5"
                BorderBrush="#423f38"
                BorderThickness="1"
                Background="#423f38">
            <StackPanel>
                <Button Command="{Binding ToggleExpandCommand}"
                        Background="#423f38"
                        BorderThickness="0"
                        Padding="0"
                        HorizontalContentAlignment="Stretch">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#423f38" />
                            <Setter Property="BorderBrush"
                                    Value="Transparent" />
                            <Setter Property="Foreground"
                                    Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="#565147" />
                                            </Trigger>
                                            <!-- Pressed -->
                                            <Trigger Property="IsPressed"
                                                     Value="True">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="#2e2b26" />
                                            </Trigger>
                                            <!-- Disabled -->
                                            <Trigger Property="IsEnabled"
                                                     Value="False">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="#2d2a25" />
                                                <Setter Property="Foreground"
                                                        Value="#888" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ParentCategory}"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Foreground="White" 
                                       Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding Total, StringFormat=N2}"
                                   VerticalAlignment="Center"
                                   Margin="8,4,8,4"
                                   FontWeight="Bold"
                                   Foreground="White" />

                        <Path Grid.Column="2"
                              VerticalAlignment="Center"
                              Margin="6,0"
                              Data="M 0 0 L 8 8 L 0 16"
                              Stroke="White"
                              StrokeThickness="2"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="{Binding IsExpanded, Converter={StaticResource BoolToAngleConverter}}" />
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </Button>

                <ItemsControl ItemsSource="{Binding Subcategories}"
                              Margin="12,8,0,0"
                              Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4 2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding SubCategory}"
                                           Foreground="White"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Total, StringFormat=N0}"
                                           FontWeight="SemiBold"
                                           Margin="12,0,0,0"
                                           Foreground="White" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>