<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Finace.ViewModels"
                    xmlns:converters="clr-namespace:Finace.Converters">

    <BooleanToVisibilityConverter x:Key="BoolToVis" />
    <converters:CountToBoolConverter x:Key="CountToBoolConverter" />
    <converters:CountToVisibilityConverter  x:Key="CountToVisibilityConverter" />
    <converters:BoolToAngleConverter x:Key="BoolToAngleConverter" />
    <converters:CountToHeightConverter x:Key="CountToHeightConverter"
                                       ItemHeight="28" />

    <DataTemplate x:Key="ParentTemplate"
                  DataType="{x:Type viewModels:ParentCategoryViewModel}">
        <Border 
                Margin="1"
                CornerRadius="5"
                BorderBrush="#36332a"
                BorderThickness="2"
                Background="#423f38">
            <StackPanel>
                <Button Command="{Binding ToggleExpandCommand}"
                        Background="#423f38"
                        BorderThickness="0"
                        Padding="0"
                        HorizontalContentAlignment="Stretch"
                        IsEnabled="{Binding Subcategories.Count, Converter={StaticResource CountToBoolConverter}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#423f38" />
                            <Setter Property="BorderBrush"
                                    Value="Transparent" />
                            <Setter Property="Foreground"
                                    Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Opacity="1">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="#565147" />
                                            </Trigger>
                                            <Trigger Property="IsPressed"
                                                     Value="True">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="#2e2b26" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Grid Margin="0,0,6,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ParentCategory}"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Foreground="White" 
                                       Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   Text="{Binding Total, StringFormat=N0, ConverterCulture=ru-RU}"
                                   FontSize="14"
                                   Margin="0,5,2,7"
                                   FontWeight="SemiBold"
                                   Foreground="#f7f4e9" />

                        <Path Grid.Column="2"
                              VerticalAlignment="Center"
                              Margin="6,0"
                              Data="M 0 0 L 6 6 L 0 12"
                              Stroke="White"
                              StrokeThickness="2"
                              RenderTransformOrigin="0.5,0.5"
                              Visibility="{Binding Subcategories.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <Path.RenderTransform>
                                <RotateTransform Angle="{Binding IsExpanded, Converter={StaticResource BoolToAngleConverter}}" />
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </Button>

                <!-- Анимированный контейнер подкатегорий -->
                <Border Padding="0"
                        Margin="0"
                        Background="#3d3a32">
                    <Grid ClipToBounds="True">
                        <!-- Содержимое: подкатегории -->
                        <ItemsControl ItemsSource="{Binding Subcategories}"
                                      Margin="12,7,12,7">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4 2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding SubCategory}"
                                                   Foreground="#f5f0e4"
                                                   FontSize="14" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Total, StringFormat=N0, ConverterCulture=ru-RU}"
                                                   Foreground="#f5f0e4"
                                                   FontSize="14"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Grid.Style>
                            <Style TargetType="Grid">
                                <!-- задаём LayoutTransform через Setter (важно) -->
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleY="0" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Opacity"
                                        Value="0" />
                                <Setter Property="IsHitTestVisible"
                                        Value="False" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}"
                                                 Value="True">
                                        <Setter Property="IsHitTestVisible"
                                                Value="True" />
                                        <Setter Property="Opacity"
                                                Value="1" />

                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(Grid.LayoutTransform).(ScaleTransform.ScaleY)"
                                                                     From="0"
                                                                     To="1"
                                                                     Duration="0:0:0.22">
                                                        <DoubleAnimation.EasingFunction>
                                                            <SineEase EasingMode="EaseOut" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>

                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="0"
                                                                     To="1"
                                                                     Duration="0:0:0.18" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>

                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(Grid.LayoutTransform).(ScaleTransform.ScaleY)"
                                                                     From="1"
                                                                     To="0"
                                                                     Duration="0:0:0.18">
                                                        <DoubleAnimation.EasingFunction>
                                                            <SineEase EasingMode="EaseIn" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>

                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="1"
                                                                     To="0"
                                                                     Duration="0:0:0.12" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>