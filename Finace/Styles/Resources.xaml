<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Finace.Converters">
    <converters:PercentageToColorConverter x:Key="PercentageToColorConverter" />
    <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter" />
    <converters:MonthToIntConverter x:Key="MonthToIntConverter" />
    <converters:YearToDisplayConverter x:Key="YearToDisplayConverter" />

    <Style x:Key="CustomTextStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource EggshellBrush}" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,0,0,2" />
    </Style>
    <DataTemplate x:Key="ExpenseCategoryTemplate">
        <Border BorderBrush="#655E5E"
                BorderThickness="0,0,0,1"
                Padding="5,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Category}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource EggshellLightBrush}"
                           HorizontalAlignment="Left" />
                <TextBlock Grid.Column="1"
                           Text="{Binding Amount, StringFormat={}{0:N0}, ConverterCulture=ru-RU}"
                           FontSize="14"
                           Foreground="{DynamicResource EggshellLightBrush}"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </DataTemplate>
    <Style x:Key="ExpenseListBoxStyle"
           TargetType="ListBox">
        <Setter Property="Margin"
                Value="10" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Background"
                Value="{DynamicResource DimGrayLightBrush}" />
        <Setter Property="ItemTemplate"
                Value="{StaticResource ExpenseCategoryTemplate}" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Auto" />
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Foreground"
                            Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBox}}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FocusVisualStyle"
                            Value="{x:Null}" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Background="#37342D"
                            BorderBrush="#37342D"
                            BorderThickness="6"
                            CornerRadius="10">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="0">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>